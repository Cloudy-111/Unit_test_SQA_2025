            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_outline_layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="wrap_content">

                    <TextView
